record(bo, "$(P)SIM")
{
  field(SCAN, "Passive")
  field(DTYP, "Soft Channel")
  field(ZNAM, "NO")
  field(ONAM, "YES")
  field(VAL, "$(RECSIM=0)")
  field(PINI, "YES")
}

record(bo, "$(P)DISABLE")
{
  field(DESC, "Disable comms")
  field(PINI, "YES")
  field(VAL, "$(DISABLE=0)")
  field(OMSL, "supervisory")
  field(ZNAM, "COMMS ENABLED")
  field(ONAM, "COMMS DISABLED")
}

record(ai, "$(P)TEMP") {
  field(DESC, "Temperature")
  field(INP, "@lakeshore372.proto getTemp $(PORT)")
  field(PREC, "3")
  field(EGU, "K")
  field(DTYP, "stream")
  field(SCAN, "1 second")
  
  info(archive, "VAL")
  info(interest, "HIGH")
  info(alarm, "LKSH372")
    
  field(SIML, "$(P)SIM")
  field(SIOL, "$(P)SIM:TEMP")
  field(SDIS, "$(P)DISABLE")
}

record(ao, "$(P)TEMP:SP") {
  field(DESC, "Temperature setpoint")
  field(OUT, "@lakeshore372.proto setTempSP($(P)) $(PORT)")
  field(PREC, "3")
  field(EGU, "K")
  field(DTYP, "stream")
  
  info(archive, "VAL")
    
  field(SIML, "$(P)SIM")
  field(SIOL, "$(P)SIM:TEMP:SP")
  field(SDIS, "$(P)DISABLE")
}

